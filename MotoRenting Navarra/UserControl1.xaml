    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="auto" MinWidth="130"/>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="112*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Button   Grid.Column="0" Background="Black" BorderThickness="0"/>
        <Button x:Name="home" Grid.Column="1" Background="Black" Foreground="White" BorderThickness="0" FontSize="18" MouseEnter="MouseEnter_boton" MouseLeave="MouseLeave_boton" Click="Ir_Home"   >Home</Button>
        <Button Grid.Column="2" Background="Black" Foreground="White" BorderThickness="0" FontSize="18" MouseEnter="MouseEnter_boton" MouseLeave="MouseLeave_boton" Click="Ir_galeria"  >Galería</Button>
        <Button Grid.Column="3" Background="Black" Foreground="White" BorderThickness="0" FontSize="18" MouseEnter="MouseEnter_boton" MouseLeave="MouseLeave_boton" Click="ir_convertidor"  >Convertidor</Button>
        <Button Grid.Column="4" Background="Black" Foreground="White" BorderThickness="0" FontSize="18" MouseEnter="MouseEnter_boton" MouseLeave="MouseLeave_boton"   >Disponibilidad</Button>
        <Button Grid.Column="5" Background="Black" Foreground="White" BorderThickness="0" FontSize="18" MouseEnter="MouseEnter_boton" MouseLeave="MouseLeave_boton"   >Login</Button>
        <Button Grid.Column="6" Background="Black" Foreground="White" BorderThickness="0" FontSize="18" MouseEnter="MouseEnter_boton" MouseLeave="MouseLeave_boton"   >Carrito</Button>



    </Grid>
</UserControl>



