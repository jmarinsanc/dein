<Window x:Class="GestionEmpleados2023.ListaEmpleados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionEmpleados2023"
        mc:Ignorable="d"
        Title="ListaEmpleados" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" FontWeight="DemiBold">Listado de Empleados</Label>
        <DataGrid x:Name="dataGrid" Grid.Row="1" ItemsSource="{Binding}" AutoGenerateColumns="True" />
        <Button Grid.Row="2" Height="30" VerticalAlignment="Bottom" FontWeight="DemiBold" VerticalContentAlignment="Center" FontSize="18" Margin="20,20" Content="Eliminar Empleado" Click="EliminarEmpleado"   />
        <Button Grid.Row="3" Height="30" VerticalAlignment="Bottom" FontWeight="DemiBold" VerticalContentAlignment="Center" FontSize="18" Margin="20,20" Content="Volver" Click="Volver_click"  />
        
    </Grid>
</Window>
